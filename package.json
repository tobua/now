{
  "name": "create-now",
  "version": "0.1.2",
  "description": "Create projects from templates.",
  "repository": "github:tobua/now",
  "license": "MIT",
  "type": "module",
  "main": "./index.js",
  "source": "./index.js",
  "types": "./index.d.ts",
  "bin": "./cli/index.js",
  "files": [
    "cli",
    "utility",
    "*.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "padua build",
    "lint": "padua lint",
    "prepublish": "padua publish",
    "test": "padua test",
    "update": "padua update",
    "watch": "padua watch"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./node_modules/padua/configuration/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    }
  },
  "dependencies": {
    "download-git-repo": "^3.0.2",
    "ejs": "^3.1.5",
    "logua": "^1.0.0",
    "node-fetch": "^2.6.0",
    "prompts": "^2.3.2",
    "rimraf": "^3.0.2",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "mock-stdin": "^1.0.0",
    "padua": "0.0.4"
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
