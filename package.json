{
  "name": "create-now",
  "description": "Create projects from templates.",
  "version": "0.1.6",
  "repository": "github:tobua/now",
  "license": "MIT",
  "scripts": {
    "test": "padua test"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "download-git-repo": "^3.0.2",
    "ejs": "^3.1.5",
    "logua": "^2.1.1",
    "node-fetch": "^2.6.1",
    "prompts": "^2.3.2",
    "rimraf": "^3.0.2",
    "validate-npm-package-name": "^3.0.0"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli/index.js",
  "source": "index.js",
  "types": "index.d.ts",
  "files": [
    "cli",
    "utility",
    "*.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "mock-stdin": "^1.0.0",
    "padua": "0.1.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./node_modules/padua/configuration/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
