{
  "name": "create-now",
  "description": "Create projects from templates.",
  "version": "0.0.0-development",
  "repository": "github:tobua/now",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "test": "vitest run"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "download-git-repo": "^3.0.2",
    "ejs": "^3.1.9",
    "find-cache-dir": "^4.0.0",
    "isbinaryfile": "^5.0.0",
    "logua": "^2.2.0",
    "node-fetch": "^3.3.1",
    "prompts": "^2.4.2",
    "temp-dir": "^3.0.0",
    "validate-npm-package-name": "^5.0.0"
  },
  "type": "module",
  "sideEffects": true,
  "main": "index.js",
  "exports": {
    "default": "./index.js"
  },
  "bin": "cli.js",
  "source": "index.js",
  "types": "index.d.ts",
  "files": [
    "utility",
    "*.js",
    "*.d.ts",
    "!test"
  ],
  "keywords": [
    "template",
    "download",
    "generator",
    "init"
  ],
  "devDependencies": {
    "is-png": "^3.0.1",
    "jest-fixture": "^4.0.2",
    "mock-stdin": "^1.0.0",
    "padua": "^1.3.0",
    "read-chunk": "^4.0.3",
    "vitest": "^0.31.4"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "engines": {
    "node": ">= 16"
  }
}
